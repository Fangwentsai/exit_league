            <!-- 雙打賽 -->
            <div class="game-section">
                <h3>雙打賽</h3>
                <table class="game-table">
                    <tr>
                        <th>賽局</th>
                        <th>客隊</th>
                        <th>主隊</th>
                    </tr>
                    <tr>
                        <td class="game-type">SET11<br><span class="game-detail">雙打501</span></td>
                        <td class="first-attack winner">
                            <div class="winner-icon"></div>
