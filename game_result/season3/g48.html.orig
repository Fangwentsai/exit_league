    <!-- 引入 JavaScript -->
    <script src="../../js/game_result.js"></script>
    <script>
        // 添加本場比賽資料
        const g48Matches = [
            {set: 1, type: '01', away: '大根毛', home: '克林', firstAttack: 'home', winner: 'home'},
            {set: 2, type: '01', away: 'Stan', home: '宗燁', firstAttack: 'home', winner: 'away'},
            {set: 3, type: '01', away: '小建', home: '小姜', firstAttack: 'home', winner: 'away'},
            {set: 4, type: '01', away: '老師', home: '小魚', firstAttack: 'away', winner: 'away'},
            {set: 5, type: '01', away: ['B哥','Stan','小虎'], home: ['克林','宗燁','小魚'], firstAttack: 'home', winner: 'home'},
            {set: 6, type: 'CR', away: '小虎', home: '軒軒', firstAttack: 'away', winner: 'home'},
            {set: 7, type: 'CR', away: '小建', home: '克林', firstAttack: 'away', winner: 'away'},
            {set: 8, type: 'CR', away: 'Stan', home: '小姜', firstAttack: 'home', winner: 'away'},
            {set: 9, type: 'CR', away: '老師', home: '亮亮', firstAttack: 'away', winner: 'home'},
