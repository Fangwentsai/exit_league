            {set: 12, type: '01', away: ['阿俊','+0'], home: ['小魚','軒軒'], firstAttack: 'home', winner: 'away'},
            {set: 13, type: 'CR', away: ['阿福','Leo'], home: ['小魚','羿珩'], firstAttack: 'home', winner: 'away'},
            {set: 14, type: 'CR', away: ['大根毛','B哥'], home: ['亮亮','小姜'], firstAttack: 'home', winner: 'home'},
            {set: 15, type: '01', away: ['阿福','Stan','小建','老師'], home: ['軒軒','克林','宗燁','羿珩'], firstAttack: 'home', winner: 'away'},
            {set: 16, type: 'CR', away: ['Leo','+0','B哥','阿俊'], home: ['亮亮','羿珩','小姜','小魚'], firstAttack: 'away', winner: 'home'}
        ];

        // 設定飲酒加成
        const drinkingBonus = {
            away: 5,
            home: 0
        };

        // 定義本場比賽的選手名單
        const awayPlayers = ['大根毛', 'Stan', '小建', '老師', 'B哥', '小虎', '阿福', '阿俊', 'Leo', '+0'];
        const homePlayers = ['克林', '宗燁', '小姜', '小魚', '軒軒', '亮亮', '羿珩'];

        // 初始化本場比賽
        addMatchData(g48Matches);
        const scores = calculateFinalScore(g48Matches, drinkingBonus);
        updateScoreDisplay(scores);
        initializeStats(awayPlayers, homePlayers);
    </script>
