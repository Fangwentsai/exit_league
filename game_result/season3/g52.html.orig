            {set: 11, type: '01', away: ['阿肥','船長'], home: ['老師','阿福'], firstAttack: 'away', winner: 'away'},
            {set: 12, type: '01', away: ['小薩','小偉'], home: ['Stan','阿元'], firstAttack: 'home', winner: 'away'},
            {set: 13, type: 'CR', away: ['小薩','小偉'], home: ['小建','阿俊'], firstAttack: 'home', winner: 'home'},
            {set: 14, type: 'CR', away: ['阿肥','船長'], home: ['耀楠','大根毛'], firstAttack: 'home', winner: 'away'},
            {set: 15, type: '01', away: ['阿肥','船長','小偉','小薩'], home: ['阿福','Stan','小建','B哥'], firstAttack: 'away', winner: 'away'},
            {set: 16, type: 'CR', away: ['小薩','船長','小偉','阿肥'], home: ['阿元','老師','阿俊','大根毛'], firstAttack: 'away', winner: 'away'}
        ];

        // 設定飲酒加成
        const drinkingBonus = {
            away: 0,
            home: 5
        };

        // 定義本場比賽的選手名單
        const awayPlayers = ['船長', '小偉', '阿肥', '小薩'];
        const homePlayers = ['小建', '阿元', '耀楠', '老師', '阿俊', 'B哥', '大根毛', 'Stan', '阿福'];

        // 初始化本場比賽
        addMatchData(g52Matches);
        const scores = calculateFinalScore(g52Matches, drinkingBonus);
        updateScoreDisplay(scores);
        initializeStats(awayPlayers, homePlayers);
    </script>
