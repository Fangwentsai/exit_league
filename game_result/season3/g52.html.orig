    <!-- 引入 JavaScript -->
    <script src="../../js/game_result.js"></script>
    <script>
        // 添加本場比賽資料
        const g52Matches = [
            {set: 1, type: '01', away: '船長', home: '小建', firstAttack: 'home', winner: 'home'},
            {set: 2, type: '01', away: '小偉', home: '阿元', firstAttack: 'home', winner: 'home'},
            {set: 3, type: '01', away: '阿肥', home: '耀楠', firstAttack: 'home', winner: 'home'},
            {set: 4, type: '01', away: '小薩', home: '老師', firstAttack: 'away', winner: 'away'},
            {set: 5, type: '01', away: ['阿肥','小偉','船長'], home: ['阿俊','阿元','B哥'], firstAttack: 'away', winner: 'away'},
            {set: 6, type: 'CR', away: '小偉', home: '大根毛', firstAttack: 'home', winner: 'away'},
            {set: 7, type: 'CR', away: '船長', home: 'Stan', firstAttack: 'home', winner: 'away'},
